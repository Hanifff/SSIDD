@model ProofsViewModel

<div class="card-deck">
    @foreach (var p in Model.Proofs)
    {
        <div class="card shadow-sm mt-3">
            <div class="card-body">
                <div class="card-title">Proof requests</div>
                <div class="card-text">
                    <div>
                        <small class="text-muted">Proof ID:&nbsp;</small>
                        <p>@p.ProofId</p>
                    </div>
                    <div>
                        <small class="text-muted">Connection ID:&nbsp;</small>
                        <p>@p.ConnectionId</p>
                    </div>
                    <div>
                        <small class="text-muted">State :&nbsp;</small>
                        <p>@p.State.ToString()</p>
                    </div>
                    <div>
                        <small class="text-muted">Request Json :&nbsp;</small>
                        <p>@p.RequestJson</p>
                    </div>
                    <div>
                        <small class="text-muted">Proof Json :&nbsp;</small>
                        <p>@p.ProofJson</p>
                    </div>
                    <div>
                        <form novalidate autocomplete="off" method="POST" asp-controller="Proofs"
                        asp-action="ProofPresentation">
                            <div class="form-group">
                                <label for="ConnectionId">Connection ID :&nbsp;</label>
                                <input class="form-control" id="ConnectionId" name="ConnectionId" value="@p.ConnectionId" />
                            </div>
                            <div class="form-group">
                                <label for="ProofId">Proof ID :&nbsp;</label>
                                <input class="form-control" id="ProofId" name="ProofId" value="@p.ProofId" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block">
                                Present Proof
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>